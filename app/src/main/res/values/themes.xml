<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!-- Base application theme (Light Mode Default). -->
    <style name="Base.Theme.SmartWomenSafetySOSApp" parent="Theme.Material3.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorOnPrimary">@color/light_onPrimary</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorTertiary">@color/colorTertiary</item>
        <item name="colorOnTertiary">@color/white</item>
        <item name="colorPrimaryContainer">@color/light_surfaceVariant</item>
        <item name="colorError">@color/colorError</item>

        <!-- Status Bar & Navigation Bar: White to match cards -->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar">true</item>

        <!-- Standard Material Attributes mapping -->
        <item name="android:colorBackground">@color/light_background</item>
        <item name="colorSurface">@color/light_surface</item>
        <item name="colorOnSurface">@color/light_onSurface</item>
        <item name="colorSurfaceVariant">@color/light_surfaceVariant</item>
        <item name="colorOnSurfaceVariant">@color/light_onSurfaceVariant</item>
        <item name="colorOutline">@color/colorOutline</item>
        <item name="colorOutlineVariant">@color/colorOutline</item>
    </style>

    <style name="Theme.SmartWomenSafetySOSApp" parent="Base.Theme.SmartWomenSafetySOSApp" />

    <style name="MyStyle">
        <item name="android:background">@drawable/img</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
    </style>

    <!-- Bottom Navigation Text Styles -->
    <style name="BottomNavTextActive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BottomNavTextInactive" parent="TextAppearance.AppCompat">
        <item name="android:textSize">11sp</item>
        <item name="android:textStyle">normal</item>
    </style>

</resources>