<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".MedicalInfoActivity">

    <!-- Header -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_arrow_back"
            app:tint="#000000"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medical Info"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_centerInParent="true" />

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Subtitle -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Emergency Medical Data"
                android:textColor="#808080"
                android:textSize="14sp"
                android:gravity="center"
                android:layout_marginBottom="24dp" />

            <!-- Row 1: Blood & Donor -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_gray_light"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="6dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/bloodtype" app:tint="#FF3B30" />
                    <EditText android:id="@+id/etBloodType" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@null"
                        android:hint="Blood Type" android:textColor="#000000"
                        android:textColorHint="#808080" android:layout_marginStart="12dp"
                        android:textSize="16sp"
                        android:inputType="textCapCharacters" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_gray_light"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="6dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_heart" app:tint="#000000" />
                    <EditText android:id="@+id/etOrganDonor" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@null"
                        android:hint="Donor (Y/N)" android:textColor="#000000"
                        android:textColorHint="#808080" android:layout_marginStart="12dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 2: Conditions & Allergies -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_gray_light"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="6dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_person" app:tint="#000000" />
                    <EditText android:id="@+id/etConditions" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@null"
                        android:hint="Conditions" android:textColor="#000000"
                        android:textColorHint="#808080" android:layout_marginStart="12dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_gray_light"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="6dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/ic_warning" app:tint="#000000" />
                    <EditText android:id="@+id/etAllergies" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@null"
                        android:hint="Allergies" android:textColor="#000000"
                        android:textColorHint="#808080" android:layout_marginStart="12dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 3: Meds & Notes -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="12dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_gray_light"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginEnd="6dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/healing" app:tint="#000000" />
                    <EditText android:id="@+id/etMedications" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@null"
                        android:hint="Meds" android:textColor="#000000"
                        android:textColorHint="#808080" android:layout_marginStart="12dp"
                        android:textSize="16sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rounded_bg_gray_light"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:layout_marginStart="6dp">
                    <ImageView android:layout_width="24dp" android:layout_height="24dp"
                        android:src="@drawable/chat_info" app:tint="#000000" />
                    <EditText android:id="@+id/etNotes" android:layout_width="match_parent"
                        android:layout_height="wrap_content" android:background="@null"
                        android:hint="Note" android:textColor="#000000"
                        android:textColorHint="#808080" android:layout_marginStart="12dp"
                        android:textSize="16sp" />
                </LinearLayout>
            </LinearLayout>

            <!-- Row 4: Full Address -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rounded_bg_gray_light"
                android:padding="16dp"
                android:gravity="center_vertical"
                android:layout_marginBottom="12dp">
                <ImageView android:layout_width="24dp" android:layout_height="24dp"
                    android:src="@drawable/ic_map" app:tint="#000000" />
                <EditText android:id="@+id/etAddress" android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:background="@null"
                    android:hint="Full Address" android:textColor="#000000"
                    android:textColorHint="#808080" android:layout_marginStart="12dp"
                    android:textSize="16sp"
                    android:inputType="textPostalAddress" />
            </LinearLayout>


        </LinearLayout>
    </ScrollView>

    <!-- Bottom Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:id="@+id/btnCancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_bg_gray"
            android:text="Cancel"
            android:textColor="#808080"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:textStyle="bold"
            android:layout_marginEnd="8dp"
            android:clickable="true"
            android:focusable="true" />

        <TextView
            android:id="@+id/btnSubmit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/rounded_bg_red"
            android:text="Submit"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:gravity="center"
            android:padding="16dp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

</LinearLayout>