<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="4dp"
    app:cardBackgroundColor="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="20dp"
        android:gravity="center_vertical">

        <!-- SOS Siren Icon -->
        <ImageView
            android:id="@+id/ivSosIcon"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_security"
            android:padding="12dp"
            android:background="@drawable/circle_background"
            android:backgroundTint="#FFEBEE"
            app:tint="#FF3333" />

        <!-- SOS Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Title -->
            <TextView
                android:id="@+id/tvSosTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SOS Triggered (sos_AUTO)"
                android:textColor="#000000"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Date -->
            <TextView
                android:id="@+id/tvSosDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2026-02-06"
                android:textColor="#666666"
                android:textSize="14sp"
                android:layout_marginTop="4dp" />

            <!-- Location -->
            <TextView
                android:id="@+id/tvSosLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Location: http://maps.google.com/?q=21.242..."
                android:textColor="#999999"
                android:textSize="12sp"
                android:layout_marginTop="6dp"
                android:maxLines="1"
                android:ellipsize="end" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>