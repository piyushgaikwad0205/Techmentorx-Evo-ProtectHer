<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="#F5F5F5"
    app:strokeColor="#FFFFFF"
    app:strokeWidth="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center_horizontal">

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan QR"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#FF3B30"
            android:layout_marginBottom="4dp" />

        <!-- Subtitle -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan this code to link with parent device"
            android:textSize="12sp"
            android:textColor="#333333"
            android:textAlignment="center"
            android:layout_marginBottom="24dp" />

        <!-- QR Code Container -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp">

            <!-- Soft background blobs could go here, keeping it simple for now -->
            <ImageView
                android:id="@+id/ivQRCode"
                android:layout_width="220dp"
                android:layout_height="220dp"
                android:src="@drawable/ic_menu_camera"
                android:scaleType="fitCenter"
                android:padding="16dp"
                android:background="@drawable/rounded_bg_white_translucent" />
        </FrameLayout>

        <TextView
            android:id="@+id/tvCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ID: XXXXX-XXXX"
            android:textSize="12sp"
            android:textStyle="bold"
            android:textColor="#999999"
            android:layout_marginBottom="24dp"
            android:visibility="gone" />

        <!-- Linked Devices Header -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Linked Devices"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FF3B30"
            android:layout_marginBottom="12dp"
            android:gravity="start" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerLinkedParents"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="80dp"
            android:layout_marginBottom="24dp"
            android:overScrollMode="never" />

        <!-- View More Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnClose"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:text="View More."
            android:textAllCaps="false"
            android:textSize="12sp"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF3B30"
            app:cornerRadius="20dp"
            android:paddingHorizontal="24dp"
            android:insetTop="0dp"
            android:insetBottom="0dp" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>