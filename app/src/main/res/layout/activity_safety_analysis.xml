<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <!-- Custom Red Rounded Header -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/headerLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/bg_header_rounded_red"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="12dp"
            android:src="@drawable/arrow_back"
            app:tint="#FFFFFF"
            android:layout_marginStart="16dp"
            android:layout_marginTop="20dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Safety Dashboard"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            app:layout_constraintStart_toEndOf="@id/btnBack"
            app:layout_constraintTop_toTopOf="@id/btnBack"
            app:layout_constraintBottom_toBottomOf="@id/btnBack" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/headerLayout"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- AI-Powered Safety Analysis Label -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AI-Powered Safety Analysis..âœ¨"
                android:textColor="#F92A2A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginBottom="8dp" />

            <!-- ... (skipping card) ... -->

            <!-- Re-Analyze Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnAnalyze"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Re-Analyze Safety   ðŸ”"
                android:textColor="#FFFFFF"
                android:textSize="16sp"
                android:textStyle="bold"
                android:backgroundTint="#F92A2A"
                app:cornerRadius="30dp"
                android:paddingStart="32dp"
                android:paddingEnd="32dp"
                android:paddingTop="12dp"
                android:paddingBottom="12dp"
                android:layout_gravity="center"
                android:layout_marginBottom="24dp" />

            <ProgressBar
                android:id="@+id/progressBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_marginBottom="16dp" />

            <!-- RESULTS LAYOUT -->
            <LinearLayout
                android:id="@+id/layoutResults"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Safety Analysis Report Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Safety Analysis Report"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:layout_marginBottom="8dp" />

                <!-- Current Location Input-like Box -->
                <TextView
                    android:id="@+id/tvAreaName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Fetching location..."
                    android:background="@drawable/bg_input_field"
                    android:padding="16dp"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp" />

                <!-- Green Safe Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardSafetyLevel"
                    android:layout_width="match_parent"
                    android:layout_height="120dp"
                    app:cardBackgroundColor="#4CAF50"
                    app:cardCornerRadius="24dp"
                    app:cardElevation="0dp"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvSafetyLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Safe (77/100)"
                            android:textColor="#FFFFFF"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Current Safety Level"
                            android:textColor="#FFFFFF"
                            android:alpha="0.9"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp" />
                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <!-- Contributing Reason Label -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Main Contributing Reason"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginBottom="8dp" />

                <!-- Reason Input-like Box -->
                <TextView
                    android:id="@+id/tvReason"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pending analysis..."
                    android:background="@drawable/bg_input_field"
                    android:padding="16dp"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginBottom="24dp" />

                <!-- Nearest Places Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nearest Safe Places"
                    android:textColor="#000000"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:baselineAligned="false"
                    android:layout_marginBottom="24dp">

                    <!-- Linear Layout for Police -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ‘® Police"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:id="@+id/layoutPolice"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <!-- Linear Layout for Hospitals -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingEnd="4dp"
                        android:paddingStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¥ Hospital"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:id="@+id/layoutHospitals"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>

                    <!-- Linear Layout for Hotels -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="4dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ¨ Hotel"
                            android:textStyle="bold"
                            android:textColor="#000000"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginBottom="8dp" />

                        <LinearLayout
                            android:id="@+id/layoutHotels"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical" />
                    </LinearLayout>

                </LinearLayout>

                <!-- Detailed Risk (Hidden Programmatically populated) -->
                <LinearLayout
                    android:id="@+id/layoutBreakdown"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone" />

            </LinearLayout>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>