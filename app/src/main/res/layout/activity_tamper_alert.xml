<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#D32F2F"
    android:padding="24dp">

    <!-- Warning Icon -->
    <ImageView
        android:id="@+id/ivWarningIcon"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp"
        android:src="@drawable/ic_warning"
        app:tint="#FFFFFF" />

    <!-- Alert Title -->
    <TextView
        android:id="@+id/tvAlertTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ivWarningIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:text="UNAUTHORIZED REMOVAL DETECTED"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:gravity="center" />

    <!-- Countdown Display -->
    <TextView
        android:id="@+id/tvCountdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvAlertTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="48dp"
        android:text="5"
        android:textSize="120sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF" />

    <!-- Warning Message -->
    <TextView
        android:id="@+id/tvWarningMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvCountdown"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="SOS will be triggered automatically\nif you don't cancel"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:gravity="center" />

    <!-- Action Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:orientation="vertical"
        android:gravity="center">

        <!-- Authenticate Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnAuthenticate"
            android:layout_width="match_parent"
            android:layout_height="64dp"
            android:text="AUTHENTICATE WITH FINGERPRINT"
            android:textSize="16sp"
            android:textStyle="bold"
            app:cornerRadius="12dp"
            app:backgroundTint="#FFFFFF"
            android:textColor="#D32F2F"
            app:icon="@drawable/ic_fingerprint"
            app:iconGravity="textStart"
            app:iconTint="#D32F2F" />

    </LinearLayout>

</RelativeLayout>