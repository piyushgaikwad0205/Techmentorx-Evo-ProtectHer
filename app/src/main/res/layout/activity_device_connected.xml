<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="8dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_back"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                app:tint="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Connected Device"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_centerInParent="true" />

            <ImageView
                android:id="@+id/btnSettings"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/ic_settings"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:padding="4dp"
                app:tint="#000000" />
        </RelativeLayout>

        <!-- Device Info Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="24dp"
            app:cardElevation="4dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="24dp"
                android:background="@android:color/white">

                <!-- Device Image (Centered) -->
                <ImageView
                    android:id="@+id/ivConnectedWatch"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:srcCompat="@drawable/ic_scanning_watch"
                    android:scaleType="fitCenter" />

                <!-- Device Name -->
                <TextView
                    android:id="@+id/tvDeviceName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Rockerz 650 Pro"
                    android:textColor="#000000"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="4dp"
                    android:gravity="center" />

                <!-- Device Address -->
                <TextView
                    android:id="@+id/tvDeviceAddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24:DF:17:27:93:5F"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:gravity="center"
                    android:background="@drawable/rounded_bg_gray"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="4dp" />

                <!-- Status & Battery Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="24dp">

                    <!-- Connection Status -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_bg_green_light"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginEnd="8dp">

                        <View
                            android:layout_width="8dp"
                            android:layout_height="8dp"
                            android:background="@drawable/circle_background"
                            android:backgroundTint="#4CAF50"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvConnectionStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Connected"
                            android:textColor="#4CAF50"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>

                    <!-- Battery -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:background="@drawable/rounded_bg_gray_light"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:layout_marginStart="8dp">

                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/ic_battery"
                            app:tint="#666666"
                            android:layout_marginEnd="6dp" />

                        <TextView
                            android:id="@+id/tvBatteryLevel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="85%"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:textStyle="bold" />
                    </LinearLayout>
                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnDeviceInfo"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Info"
                        android:textColor="#2196F3"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:strokeColor="#2196F3"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_info"
                        app:iconTint="#2196F3"
                        app:iconGravity="textStart"
                        android:layout_marginEnd="8dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnRemove"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:layout_width="0dp"
                        android:layout_height="48dp"
                        android:layout_weight="1"
                        android:text="Unpair"
                        android:textColor="#FF3B30"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:strokeColor="#FF3B30"
                        app:strokeWidth="1dp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_delete"
                        app:iconTint="#FF3B30"
                        app:iconGravity="textStart"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Health Monitoring Section -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Monitoring"
            android:textColor="#000000"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Heart Rate Monitor Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:background="@android:color/white">

                <!-- Heart Rate Header -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentStart="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_heart"
                            app:tint="#FF3B30" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart Rate Monitor"
                            android:textColor="#000000"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginStart="8dp" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tvMonitoringStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Live Monitoring"
                        android:textColor="#4CAF50"
                        android:textSize="11sp"
                        android:textStyle="bold"
                        android:background="@drawable/rounded_bg_green"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="4dp"
                        android:layout_alignParentEnd="true"
                        android:layout_centerVertical="true" />
                </RelativeLayout>

                <!-- Heart Rate Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:id="@+id/imgHeartPulse"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_heart_pulse"
                        app:tint="#FF3B30" />

                    <TextView
                        android:id="@+id/tvHeartRate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="#000000"
                        android:textSize="48sp"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="BPM"
                        android:textColor="#666666"
                        android:textSize="16sp"
                        android:layout_marginStart="8dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="8dp" />
                </LinearLayout>

                <!-- Recent History -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent History"
                    android:textColor="#666666"
                    android:textSize="12sp"
                    android:layout_marginBottom="8dp" />

                <LinearLayout
                    android:id="@+id/layoutHeartRateHistory"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="#F5F5F5"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No data available"
                        android:textColor="#999999"
                        android:textSize="12sp"
                        android:layout_gravity="center" />
                </LinearLayout>
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Find Device Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnFindDevice"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Find My Device"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            app:backgroundTint="#FF3B30"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_search"
            app:iconTint="@android:color/white"
            app:iconGravity="textStart"
            android:layout_marginTop="8dp"
            style="@style/Widget.Material3.Button" />

    </LinearLayout>
</ScrollView>